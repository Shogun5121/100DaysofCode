//Question: Write a program to swap two numbers without using a third variable.

#include <stdio.h>

int main() {
    int a, b;

    printf("Enter first number: ");
    scanf("%d", &a);

    printf("Enter second number: ");
    scanf("%d", &b);

    printf("\nBefore swapping: a = %d, b = %d\n", a, b);
    
    a = a-b;
    b = a+b;
    a = b-a;

    printf("After swapping: a = %d, b = %d", a, b);

    return 0;
}
