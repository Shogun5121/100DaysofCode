    //Checking if an integer inputed is positive, negative or zero using nested if-else

    #include <stdio.h>
    int main() {
        int n;
        printf("Enter Integer: ");
        scanf("%d", &n);

        if(n>0)
        {
            printf("\n%d is positive", n);
        }
        else
        {
            if(n<0)
            {
                printf("\n%d is negative", n);
            }
            else
            {
                if(n==0)
                {
                    printf("\n%d is zero", n);
                };
            };
        };
        

        return 0;
    }
